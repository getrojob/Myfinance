@model UsuarioModel

@{
    Layout = "../Shared/_layoutLogin.cshtml";
}

<div class="container" style="background-color:rgba(245, 245, 245, 0.80);border-radius: 10px 20px; padding:20px; width:350px; height:auto; margin: 7% auto; ">
    <h3>Registrar minha conta!</h3>
    <br />
    <form asp-controller="Usuario" asp-action="Registrar">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" asp-for="Nome">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="pwd">Senha:</label>
            <input type="password" class="form-control" asp-for="Senha">
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="data">Data de Nascimento:</label>
            <input type="date" class="form-control" asp-for="Data_Nascimento">
            <span asp-validation-for="Data_Nascimento" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Registrar</button>
        <button type="button" class="btn btn-primary" onclick="javascript:window.location.href = '../Usuario/Login'">Login</button>

    </form>
</div>